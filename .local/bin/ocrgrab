#!/bin/sh
tmpPic=$(mktemp)

trap 'rm "$tmpPic"' EXIT
trap exit INT TERM

if [ "$WAYLAND_DISPLAY" ]; then
	screenshot(){
		grim -t ppm -g "$crop" "$@"
	}
	crop(){
		slurp -b 00000000 -c ffffffff -w 1
	}
	clip(){
		wl-copy -- "$1"
	}
else
	screenshot(){
		shotgun -f pam $crop "$@"
	}
	crop(){
		hacksaw -f '-i %i -g %g'
	}
	clip(){
		echo "$1" | xclip -sel c
	}
fi
crop=$(crop) || {
	notify-send "Cancelling"
	exit
}
screenshot "$tmpPic"

text=$(zbarimg -q "$tmpPic" | cut -d: -f2-)
if [ "$text" ]; then
	clip "$text" && notify-send "Grabbed barcode"
else
	text=$(tesseract "$tmpPic" stdout --oem 1 -l eng+osd)
	if [ "$text" ]; then
		clip "$text" && notify-send "Grabbed text"
	else
		notify-send "Nothing detected"
	fi
fi
